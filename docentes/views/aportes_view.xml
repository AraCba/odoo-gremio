<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="aportes_tree_view">
        <field name="name">Aportes</field>
        <field name="model">docentes.aportes</field>
        <field name="arch" type="xml">
            <tree string="Aportes">
                <field name="docente"/>
                <field name="legajo"/>
                <field name="fecha"/>
                <field name="codigo_bis"/>
                <field name="aporte"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="aportes_form_view">
        <field name="name">Aportes</field>
        <field name="model">docentes.aportes</field>
        <field name="arch" type="xml">
            <form string="Aporte">
                <sheet>
                    <group>
                        <field name="docente" domain="[('esdocente', '=', True)]"/>
                        <field name="fecha"/>
                        <field name="codigo_bis"/>
                        <field name="aporte"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ======================  -->
    <!--    CODIGO DE APORTE     -->
    <!-- ======================  -->
    <!-- Vista de formulario -->
    <record model="ir.ui.view" id="codigo_aporte_form_view">
        <field name="name">Código de aporte</field>
        <field name="model">docentes.codigo.aporte</field>
        <field name="arch" type="xml">
            <form string="Código de aporte">
                <sheet>
                    <group>
                        <field name="nombre" />
                        <field name="codigo" />
                        <field name="activo" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de lista -->
    <record model="ir.ui.view" id="codigo_aporte_tree_view">
        <field name="name">Códigos de aporte</field>
        <field name="model">docentes.codigo.aporte</field>
        <field name="arch" type="xml">
            <tree string="Codigos de aporte">
                <field name="nombre" />
                <field name="codigo" />
                <field name="activo" />
            </tree>
        </field>
    </record>

    
</odoo>

