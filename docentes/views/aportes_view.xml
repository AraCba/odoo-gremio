<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <menuitem name="Aportes" id="base.menu_docentes_aportes" sequence="11" parent="base.menu_docentes"/>

    <record model="ir.ui.view" id="aportes_tree_view">
        <field name="name">Aportes</field>
        <field name="model">docentes.aportes</field>
        <field name="arch" type="xml">
            <tree string="Aportes">
                <field name="docente"/>
                <field name="legajo"/>
                <field name="fecha"/>
                <field name="codigo"/>
                <field name="aporte"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="aportes_form_view">
        <field name="name">Aportes</field>
        <field name="model">docentes.aportes</field>
        <field name="arch" type="xml">
            <form string="Aporte">
                <sheet>
                    <group>
                        <field name="docente"/>
                        <!--field name="nombre"/>
                        <field name="legajo"/-->
                        <field name="fecha"/>
                        <!-- <field name="codigo"/> -->
                        <field name="aporte"/>
                        <field name="codigo_aporte" domain="[('activo', '=', 'True')]"/>
                        <field name="categoria_aporte" domain="[('activo', '=', 'True')]"/>
                        <field name="caracter_aporte" domain="[('activo', '=', 'True')]"/>
                        <field name="dependencia_aporte" domain="[('activo', '=', 'True')]"/>
                        <field name="subdependencia_aporte" domain="[('activo', '=', 'True')]"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_aportes">
        <field name="name">Aporte</field>
        <field name="res_model">docentes.aportes</field>
        <field name="domain">[]</field>
        <field name="search_view_id" ref="aportes_form_view"/>
    </record>
    <menuitem name="Aportes" id="aportes" parent="base.menu_docentes_aportes" groups="base.group_aportes_crear" sequence="1" action="action_aportes" />

    <!-- ########## Codigo de aportes ##########-->
    <record model="ir.ui.view" id="codigo_aporte_tree_view">
        <field name="name">Código de aportes</field>
        <field name="model">docentes.codigo_aporte</field>
        <field name="arch" type="xml">
            <tree string="Codigo_aportes">
                <field name="name"/>
                <field name="activo"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="codigo_aporte_form_view">
        <field name="name">Código de aportes</field>
        <field name="model">docentes.codigo_aporte</field>
        <field name="arch" type="xml">
            <form string="Aporte">
                <sheet>
                    <group>
                        <field name="name" attrs="{'readonly': [('id', '>', '0')]}"/>
                        <field name="activo"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_codigo_aporte">
        <field name="name">Código de aportes</field>
        <field name="res_model">docentes.codigo_aporte</field>
    </record>

    <menuitem name="Código de aportes" id="codigo_aporte" 
        parent="base.menu_docentes_aportes" 
        groups="base.group_aportes_crear" 
        sequence="10" action="action_codigo_aporte"/>

    <!-- ########## Categoria de aportes ##########-->
    <record model="ir.ui.view" id="categoria_aporte_tree_view">
        <field name="name">Categoría de aportes</field>
        <field name="model">docentes.categoria_aporte</field>
        <field name="arch" type="xml">
            <tree string="Categoria_aportes">
                <field name="name"/>
                <field name="activo"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="categoria_aporte_form_view">
        <field name="name">Categoría de aportes</field>
        <field name="model">docentes.categoria_aporte</field>
        <field name="arch" type="xml">
            <form string="Aporte">
                <sheet>
                    <group>
                        <field name="name" attrs="{'readonly': [('id', '>', '0')]}"/>
                        <field name="activo"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_categoria_aporte">
        <field name="name">Categorias de aportes</field>
        <field name="res_model">docentes.categoria_aporte</field>
    </record>
    
    <menuitem name="Categoría de aportes" id="categoria_aporte" 
        parent="base.menu_docentes_aportes" 
        groups="base.group_aportes_crear" 
        sequence="20" action="action_categoria_aporte"/>

    
</odoo>

