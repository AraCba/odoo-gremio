<?xml version="1.0" encoding="utf-8" ?>
<odoo>

  <!-- Vista de formulario -->
  <record model="ir.ui.view" id="cargos_form_view">
    <field name="name">Cargo</field>
    <field name="model">docentes.cargo</field>
    <field name="arch" type="xml">
      <form string="Cargos">
        <sheet>
          <group>
            <field name="docente" />
            <field name="tipo_cargo" />
            <field name="nro_cargo" />
            <field name="cant_horas" />
            <field name="caracter" />
            <field name="dependencia" />
            <field name="etiqueta" widget="many2many_tags"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Vista de lista -->
  <record model="ir.ui.view" id="cargos_tree_view">
    <field name="name">cargos.tree.view</field>
    <field name="model">docentes.cargo</field>
    <field name="arch" type="xml">
      <tree string="Cargos">
        <field name="docente" />
        <field name="tipo_cargo" />
        <field name="nro_cargo" />
        <field name="cant_horas" />
        <field name="caracter" />
        <field name="dependencia" />
      </tree>
    </field>
  </record>

  <!-- ======================  -->
  <!--     TIPO DE CARGO       -->
  <!-- ======================  -->
  <!-- Vista de formulario -->
  <record model="ir.ui.view" id="tipo_cargo_form_view">
    <field name="name">Tipo de cargo</field>
    <field name="model">docentes.tipo.cargo</field>
    <field name="arch" type="xml">
      <form string="Tipo de cargos">
        <sheet>
          <group>
            <field name="name" />
            <field name="codigo" />
            <field name="horas" />
            <field name="dedicacion" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Vista de lista -->
  <record model="ir.ui.view" id="tipo_cargo_tree_view">
    <field name="name">tipo.cargos.tree.view</field>
    <field name="model">docentes.tipo.cargo</field>
    <field name="arch" type="xml">
      <tree string="Tipo de cargos">
        <field name="name" />
        <field name="codigo" />
        <field name="horas" />
        <field name="dedicacion" />
      </tree>
    </field>
  </record>

  <!-- ======================  -->
  <!--   CARACTER DE CARGO     -->
  <!-- ======================  -->
  <!-- Vista de formulario -->
  <record model="ir.ui.view" id="caracter_cargo_form_view">
    <field name="name">Caracter del cargo</field>
    <field name="model">docentes.caracter.cargo</field>
    <field name="arch" type="xml">
      <form string="Caracter del cargo">
        <sheet>
          <group>
            <field name="name" />
            <field name="codigo" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Vista de lista -->
  <record model="ir.ui.view" id="caracter_cargo_tree_view">
    <field name="name">caracter.cargo.tree.view</field>
    <field name="model">docentes.tipo.cargo</field>
    <field name="arch" type="xml">
      <tree string="Tipo de cargos">
        <field name="name" />
        <field name="codigo" />
      </tree>
    </field>
  </record>

  <!-- ======================  -->
  <!--  DEPENDENCIA DE CARGO   -->
  <!-- ======================  -->
  <!-- Vista de formulario -->
  <record model="ir.ui.view" id="dependencia_cargo_form_view">
    <field name="name">Dependencia del cargo</field>
    <field name="model">docentes.dependencia.cargo</field>
    <field name="arch" type="xml">
      <form string="Dependencia del cargo">
        <sheet>
          <group>
            <field name="name" />
            <field name="codigo" />
            <field name="padre" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Vista de lista -->
  <record model="ir.ui.view" id="dependencia_cargo_tree_view">
    <field name="name">dependencia.cargo.tree.view</field>
    <field name="model">docentes.dependencia.cargo</field>
    <field name="arch" type="xml">
      <tree string="Dependencia de cargos">
        <field name="name" />
        <field name="codigo" />
        <field name="padre" />
      </tree>
    </field>
  </record>

</odoo>