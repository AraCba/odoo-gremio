<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Vista de lista -->
	<record model="ir.ui.view" id="bolsones_tree_view">
		<field name="name">bolsones.tree</field>
		<field name="model">docentes.bolsones</field>
		<field name="arch" type="xml">
			<tree string="Bolsones">
				<field name="solicitante" />
        <field name="menor" />
        <field name="nivel" />
				<field name="entregado" />
			</tree>
		</field>
  </record>

  <!-- Vista de pivot -->
  <record model="ir.ui.view" id="bolsones_pivot_view">
    <field name="name">bolsones.pivot</field>
    <field name="model">docentes.bolsones</field>
    <field name="arch" type="xml">
        <pivot string="Bolsones">
          <field name="solicitud" type="row"/>
          <field name="menor" type="col"/>
          <field name="nivel" type="col"/>
          <field name="entregado" type="row"/>
        </pivot>
    </field>
  </record>

