<?xml version="1.0"?>
<odoo>
  <data noupdate="1">
    <record id="solicitud_nuevo_estado_email_template" model="mail.template">
      <field name="name">Cambio de estado en solicitud</field>
      <field name="model_id" ref="docentes.model_docentes_solicitudes" />
      <field name="email_from">${object.docente.company_id and object.docente.company_id.email or ''}</field>
      <field name="email_to">${object.docente.email|safe}</field>
      <field name="subject">Cambio de estado en su solicitud</field>
      <field name="body_html" type="html">

        <p>
          Querido ${object.docente.name},
          <br />
          <br />
          Le informamos que su solicitud paso a estado: ${object.state}
          <br />
        </p>
        <p>
          Saludos,
          <br />
          ${object.docente.company_id.name}
        </p>

      </field>
    </record>
  </data>
</odoo>